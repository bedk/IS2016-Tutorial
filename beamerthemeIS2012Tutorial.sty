%\setbeamercolor*{palette secondary}{fg=white,bg=LoreleiTan}
\setbeamercolor*{palette secondary}{fg=white,bg=blue}
\setbeamercolor*{palette tertiary}{bg=LoreleiTan!80!black,fg=gray!10!white}
\setbeamercolor*{palette quaternary}{fg=LoreleiTan,bg=gray!5!white}

\setbeamercolor*{itemize item}{fg=LoreleiTan,bg=white}
\setbeamercolor*{itemize subitem}{fg=LoreleiTan!70!inverse,bg=white}
\setbeamercolor*{itemize subsubitem}{fg=LoreleiTan!40!inverse,bg=white}

\setbeamercolor*{enumerate item}{fg=LoreleiTan,bg=white}
\setbeamercolor*{enumerate subitem}{fg=LoreleiTan!80!inverse,bg=white}
\setbeamercolor*{enumerate subsubitem}{fg=LoreleiTan!20!inverse,bg=white}

\setbeamercolor*{item projected}{bg=LoreleiTan,fg=white}
\setbeamercolor*{subitem projected}{bg=LoreleiTan!70!inverse,fg=white}
\setbeamercolor*{subsubitem projected}{bg=LoreleiTan!40!inverse,fg=white}

\setbeamercolor{titlelike}{parent=pallette primary}
%\setbeamercolor{frametitle}{parent=pallette primary}

% New Colors
\setbeamercolor*{olive}{fg=olive,bg=white}
\setbeamercolor{frametitle}{parent=olive}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
