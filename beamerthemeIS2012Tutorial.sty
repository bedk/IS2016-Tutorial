% 11 December 2008
%
\mode<presentation>
% Turn off presentation cruft - minimalism rocks!

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{sidebar right}{}

\setbeamerfont*{title}{size=\huge,family=\sffamily}
\setbeamerfont*{author}{size=\large,family=\sffamily,series=\normalfont}
\setbeamerfont*{institute}{size=\small,family=\sffamily,series=\normalfont}
\setbeamerfont*{date}{size=\small,family=\sffamily}

\setbeamerfont*{itemize/enumerate body}{size=\footnotesize}
\setbeamerfont*{itemize/enumerate subbody}{size=\scriptsize}

\setbeamertemplate{title page}
{
  \vbox{}
  \usebeamerfont{title}\inserttitle\par
  \vfill
  \usebeamerfont{author}\insertauthor\par
  \vfill
  \usebeamerfont{institute}\insertinstitute\par
}

% Control itemization
\setbeamertemplate{itemize items}[triangle]

% Set up headlines and footlines

\setbeamertemplate{footline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.0ex,dp=1ex,left]{palette secondary}%
    \usebeamerfont{footline}
    \hspace*{0.5em}
    \insertdate
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.0ex,dp=1ex,right]{palette secondary}%
      \usebeamerfont{footline}
    \end{beamercolorbox}
  }
  \vskip0pt%
}

\setbeamertemplate{headline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.0ex,dp=1ex,left]{palette secondary}%
    \usebeamerfont{footline}
    \hspace*{0.5em}
    Pushing the frontiers of speech processing
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.0ex,dp=1ex,right]{palette secondary}%
    \usebeamerfont{footline}
    Interspeech 2012 Tutorial
    \hspace*{0.5em}
  \end{beamercolorbox}}%
  \vskip0pt%
}

\definecolor{DarkerBlue}{rgb}{0.20,0.38,0.64}
\definecolor{cyan}{rgb}{0.0,1.0,1.0}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor*{palette primary}{fg=DarkerBlue,bg=white}
\setbeamercolor*{palette secondary}{fg=white,bg=DarkerBlue}
\setbeamercolor*{palette tertiary}{bg=DarkerBlue!80!black,fg=gray!10!white}
\setbeamercolor*{palette quaternary}{fg=DarkerBlue,bg=gray!5!white}

\setbeamercolor*{itemize item}{fg=DarkerBlue,bg=white}
\setbeamercolor*{itemize subitem}{fg=DarkerBlue!70!cyan,bg=white}
\setbeamercolor*{itemize subsubitem}{fg=DarkerBlue!40!cyan,bg=white}

\setbeamercolor*{enumerate item}{fg=DarkerBlue,bg=white}
\setbeamercolor*{enumerate subitem}{fg=DarkerBlue!70!cyan,bg=white}
\setbeamercolor*{enumerate subsubitem}{fg=DarkerBlue!40!cyan,bg=white}

\setbeamercolor*{item projected}{bg=DarkerBlue,fg=white}
\setbeamercolor*{subitem projected}{bg=DarkerBlue!70!cyan,fg=white}
\setbeamercolor*{subsubitem projected}{bg=DarkerBlue!40!cyan,fg=white}

\setbeamercolor{titlelike}{parent=palette primary}
\setbeamercolor{frametitle}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
